<h1>Burger App!</h1>

<ul>
{{#each burgers}}
{{#unless devoured}}
    {{!-- Render undevoured Burgers here --}}
    <li>
    {{ burger_name }}
    <button data-id={{id}} data-devoured={{devoured}} class="eatBurgerBtn">Devour</button>
    </li>
{{/unless}}
{{/each}}
</ul>

<hr />

<ul>
{{#each burgers}}
{{#if devoured}}
    {{!-- Render devoured Burgers here --}}
    <li>{{ burger_name }}</li>
{{/if}}
{{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerID">Buger Name:</label>
    <input type="text" id="burgerID" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
