<h1>Burger App!</h1>

<img src="/assets/img/burgerPic.webp" alt="tasty burger">

<div class="container">
    <div class="row">

        <div class="col">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{!-- Render undevoured Burgers here --}}
                <li class="ready left">
                    {{ burger_name }}
                    <button data-id={{id}} data-devoured={{devoured}} class="eatBurgerBtn">Devour</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{!-- Render devoured Burgers here --}}
                <li class="eaten right">{{ burger_name }}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
</div>

<hr />

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burgerID">Buger Name:</label>
        <input type="text" id="burgerID" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>